{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@management/core/assets": ["libs/core/assets/src/index.ts"],
      "@management/core/components": ["libs/core/components/src/index.ts"],
      "@management/core/constants": ["libs/core/constants/src/index.ts"],
      "@management/core/hooks": ["libs/core/hooks/src/index.ts"],
      "@management/core/icons": ["libs/core/icons/src/index.ts"],
      "@management/core/middleware": ["libs/core/middleware/src/index.ts"],
      "@management/core/models": ["libs/core/models/src/index.ts"],
      "@management/core/routes": ["libs/core/routes/src/index.ts"],
      "@management/core/types": ["libs/core/types/src/index.ts"],
      "@management/core/ui-components": [
        "libs/core/ui-components/src/index.ts"
      ],
      "@management/core/utils": ["libs/core/utils/src/index.ts"],
      "@management/features/estate": ["libs/features/estate/src/index.ts"],
      "@management/features/home": ["libs/features/home/src/index.ts"],
      "@management/features/service-calls": [
        "libs/features/service-calls/src/index.ts"
      ],
      "@management/features/supplier": ["libs/features/supplier/src/index.ts"],
      "@management/features/worker": ["libs/features/worker/src/index.ts"],
      "@management/graphql-services": ["libs/graphql-services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
